# syntax=docker/dockerfile:1
FROM node:20-alpine
WORKDIR /app
RUN corepack enable

# Ensure a stable pnpm version via Corepack and allow installing
# even if the lockfile is out of sync with package.json.
COPY package.json pnpm-lock.yaml* ./
# Activate a specific pnpm version (matches the pnpm fetched in logs)
RUN corepack prepare pnpm@8.10.0 --activate
RUN pnpm install --no-frozen-lockfile

COPY tsconfig.json ./
COPY tsconfig.app.json ./
COPY tsconfig.node.json ./
COPY index.html ./
COPY vite.config.ts ./
COPY components.json ./
COPY tailwind.config.ts ./
COPY postcss.config.js ./
COPY public ./public
COPY src ./src

ENV NODE_ENV=development
ENV VITE_API_BASE_URL=http://localhost:3333/api/v1
EXPOSE 5173
CMD ["pnpm", "dev", "--host", "0.0.0.0"]
