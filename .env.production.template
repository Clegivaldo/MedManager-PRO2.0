# ========================================
# VARIÁVEIS DE AMBIENTE - PRODUÇÃO
# ========================================
# IMPORTANTE: Este arquivo contém valores de exemplo
# Copie para .env e configure com valores reais
# NUNCA commite o arquivo .env real no Git!
# ========================================

# Node Environment
NODE_ENV=production
PORT=3333

# Database (Master)
DATABASE_URL=postgresql://postgres:CHANGE_ME@db:5432/medmanager_master

# JWT Secrets (GERAR VALORES ÚNICOS)
# Use: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
JWT_SECRET=GENERATE_SECURE_SECRET_HERE_MIN_32_CHARS
JWT_REFRESH_SECRET=GENERATE_DIFFERENT_SECURE_SECRET_HERE_MIN_32_CHARS

# Encryption Key (GERAR VALOR ÚNICO)
# Use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=GENERATE_SECURE_ENCRYPTION_KEY_HERE_64_HEX_CHARS

# Redis
REDIS_URL=redis://redis:6379

# API Configuration
API_VERSION=v1
UPLOAD_MAX_SIZE=10mb
UPLOAD_DIR=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Tenant Configuration
MAX_TENANTS=100
DEFAULT_TENANT_STORAGE_GB=10
TENANT_ISOLATION_ENABLED=true
BACKUP_RETENTION_DAYS=30

# SEFAZ Configuration (Opcional)
SEFAZ_NFE_ENDPOINT=
SEFAZ_CERT_PATH=
SEFAZ_CERT_PASSWORD=
ALLOW_NFE_SIMULATION=false

# Email Configuration (Opcional)
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASS=
FROM_EMAIL=

# CORS
CORS_ORIGINS=https://app.medmanager.com,https://medmanager.com
TRUST_PROXY=true

# ========================================
# INSTRUÇÕES DE SEGURANÇA
# ========================================
