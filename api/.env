# Environment variables for MedManager Backend

# Database Configuration
DATABASE_URL="postgresql://postgres:postgres123@localhost:5432/medmanager_master"
REDIS_URL="redis://localhost:6380"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="24h"
JWT_REFRESH_SECRET="your-refresh-secret-key-change-this-in-production"
JWT_REFRESH_EXPIRES_IN="7d"

# Server Configuration
PORT=3333
NODE_ENV="development"
API_VERSION="v1"

# File Storage
UPLOAD_MAX_SIZE="10mb"
UPLOAD_DIR="./uploads"

# Rate Limiting
RATE_LIMIT_WINDOW_MS="900000"  # 15 minutes
RATE_LIMIT_MAX_REQUESTS="100"

# Logging
LOG_LEVEL="info"
LOG_FILE="./logs/app.log"

# Email Configuration (optional)
SMTP_HOST=""
SMTP_PORT="587"
SMTP_USER=""
SMTP_PASS=""
FROM_EMAIL="noreply@medmanager.com"
FRONTEND_URL="http://localhost:5173"

# ANVISA Integration
ANVISA_SNGPC_ENDPOINT="https://sngpc.anvisa.gov.br"
ANVISA_SNCM_ENDPOINT="https://sncm.anvisa.gov.br"
ANVISA_API_KEY=""

# Sefaz Integration
SEFAZ_NFE_ENDPOINT=""
SEFAZ_CTE_ENDPOINT=""
SEFAZ_CERT_PATH=""
SEFAZ_CERT_PASSWORD=""

# Backup Configuration
BACKUP_RETENTION_DAYS="30"
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM

# Tenant Configuration
MAX_TENANTS="100"
DEFAULT_TENANT_STORAGE_GB="10"
TENANT_ISOLATION_ENABLED="true"
# Permitir simulacao de NF-e em modo dev (sem certificado)
ALLOW_NFE_SIMULATION=true
ALLOW_NFE_SIMULATION=true
