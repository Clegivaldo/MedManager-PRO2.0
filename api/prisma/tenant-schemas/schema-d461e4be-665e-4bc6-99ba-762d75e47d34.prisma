generator client {
  provider = "prisma-client-js"
  output   = "../generated/client-d461e4be-665e-4bc6-99ba-762d75e47d34"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://tenant_demo:demo123@localhost:5432/tenant_demo"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String
  password  String
  role      String   @default("user")
  isActive  Boolean  @default(true) @map("is_active")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("users")
}

model Product {
  id          String   @id @default(uuid())
  name        String
  description String?
  sku         String   @unique
  barcode     String?  @unique
  ncm         String?
  cest        String?
  unit        String
  costPrice   Decimal  @map("cost_price") @db.Decimal(10, 2)
  salePrice   Decimal  @map("sale_price") @db.Decimal(10, 2)
  isActive    Boolean  @default(true) @map("is_active")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  batches Batch[]
  stock   Stock[]

  @@map("products")
}

model Batch {
  id         String   @id @default(uuid())
  number     String   @unique
  productId  String   @map("product_id")
  quantity   Int
  expiration DateTime?
  manufacturingDate DateTime? @map("manufacturing_date")
  supplier   String?
  costPrice  Decimal  @map("cost_price") @db.Decimal(10, 2)
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")

  product Product @relation(fields: [productId], references: [id])
  stock   Stock[]

  @@map("batches")
}

model Stock {
  id        String   @id @default(uuid())
  productId String   @map("product_id")
  batchId   String   @map("batch_id")
  quantity  Int
  reserved  Int      @default(0)
  available Int      @map("available_quantity")
  location  String?
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  product Product @relation(fields: [productId], references: [id])
  batch   Batch   @relation(fields: [batchId], references: [id])

  @@unique([productId, batchId])
  @@map("stock")
}

model Customer {
  id         String   @id @default(uuid())
  name       String
  email      String?  @unique
  document   String   @unique
  phone      String?
  address    String?
  city       String?
  state      String?
  zipCode    String?  @map("zip_code")
  isActive   Boolean  @default(true) @map("is_active")
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")

  invoices Invoice[]

  @@map("customers")
}

model Supplier {
  id        String   @id @default(uuid())
  name      String
  email     String?  @unique
  document  String   @unique
  phone     String?
  address   String?
  city      String?
  state     String?
  zipCode   String?  @map("zip_code")
  isActive  Boolean  @default(true) @map("is_active")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("suppliers")
}

model Invoice {
  id           String   @id @default(uuid())
  number       String   @unique
  series       String   @default("1")
  type         String
  customerId   String   @map("customer_id")
  issueDate    DateTime @map("issue_date")
  totalAmount  Decimal  @map("total_amount") @db.Decimal(10, 2)
  status       String   @default("DRAFT")
  xmlContent   String?  @map("xml_content") @db.Text
  pdfUrl       String?  @map("pdf_url")
  notes        String?
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  customer   Customer      @relation(fields: [customerId], references: [id])
  items      InvoiceItem[]

  @@map("invoices")
}

model InvoiceItem {
  id          String   @id @default(uuid())
  invoiceId   String   @map("invoice_id")
  productId   String   @map("product_id")
  description String
  quantity    Int
  unitPrice   Decimal  @map("unit_price") @db.Decimal(10, 2)
  totalPrice  Decimal  @map("total_price") @db.Decimal(10, 2)
  createdAt   DateTime @default(now()) @map("created_at")

  invoice Invoice @relation(fields: [invoiceId], references: [id], onDelete: Cascade)

  @@map("invoice_items")
}

model AuditLog {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  action    String
  entity    String
  entityId  String   @map("entity_id")
  changes   String?  @db.Text
  ipAddress String?  @map("ip_address")
  userAgent String?  @map("user_agent")
  createdAt DateTime @default(now()) @map("created_at")

  @@map("audit_logs")
}

model RDC430Record {
  id             String   @id @default(uuid())
  productId      String   @map("product_id")
  batchId        String   @map("batch_id")
  operationType  String   @map("operation_type")
  quantity       Int
  date           DateTime
  documentNumber String   @map("document_number")
  notes          String?
  createdAt      DateTime @default(now()) @map("created_at")

  product Product @relation(fields: [productId], references: [id])
  batch   Batch   @relation(fields: [batchId], references: [id])

  @@map("rdc430_records")
}

model SNGPCRecord {
  id             String   @id @default(uuid())
  productId      String   @map("product_id")
  batchId        String   @map("batch_id")
  operationType  String   @map("operation_type")
  quantity       Int
  date           DateTime
  prescription   String?  @map("prescription_number")
  patientName    String?  @map("patient_name")
  patientDocument String? @map("patient_document")
  doctorName     String?  @map("doctor_name")
  doctorDocument String?  @map("doctor_document")
  notes          String?
  createdAt      DateTime @default(now()) @map("created_at")

  product Product @relation(fields: [productId], references: [id])
  batch   Batch   @relation(fields: [batchId], references: [id])

  @@map("sngpc_records")
}